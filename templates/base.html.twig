<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>
        <header>
            <div>
                <!--NAV.BARRE ET TITRE -->
                <h1> <a href="#"><img src="{{ asset('image/logo.png') }}" alt="Logo"></a> Sortir.com</h1>
                <ul class="nav justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('') }}">Active</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=""{{ path('') }}"">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=""{{ path('') }}"">Mon profil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=""{{ path('') }}"">Se déconnecter</a>
                    </li>
                </ul>
            </div>
        </header>

        <main>
            <div class="container">
            {% block body %}{% endblock %}
            </div>
        </main>

        <footer>
            <div class="container">
                <p>&copy {{ "now" |date('Y') }} Sortir avec l'ENI </p>
            </div>

        </footer>
    </body>
</html>
